
@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/C4.css">
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tin tức du học</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
        }
        .main-content {
            flex: 3;
            padding-right: 20px;
        }
        .sidebar {
            flex: 1;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }
        .news-item {
            background-color: #fff;
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-wrap: wrap;
        }
        .news-item img {
            max-width: 200px;
            border-radius: 8px;
        }
        .news-details {
            flex: 1;
            padding-left: 15px;
        }
        .news-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .news-summary {
            font-size: 16px;
            color: #555;
        }
        .news-date {
            font-size: 14px;
            color: #888;
            margin-top: 5px;
        }
        .sidebar h2 {
            font-size: 20px;
            margin-bottom: 20px;
        }
        .sidebar ul {
            list-style-type: none;
            padding-left: 0;
        }
        .sidebar ul li {
            margin-bottom: 10px;
        }
        .sidebar ul li a {
            text-decoration: none;
            color: #007bff;
        }
        .sidebar ul li a:hover {
            text-decoration: underline;
        }
        (max-width: 768px) {
            .container {
                flex-direction: column;
            }
            .main-content {
                padding-right: 0;
            }
            .news-item {
                flex-direction: column;
            }
            .news-item img {
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="main-content">
            <h1>TIN TỨC NỔI BẬT</h1>

            <div class="news-item">
                <img src="~/Hinh/Oto.jpg" alt="Du học Hàn Quốc ngành công nghệ ô tô">
                <div class="news-details">
                    <h3 class="news-title">Du học Hàn Quốc ngành công nghệ ô tô: Chương trình, chi phí</h3>
                    <p class="news-summary">Du học Hàn Quốc ngành công nghệ ô tô là sự lựa chọn hàng đầu tại các hãng lớn như Hyundai, Kia...</p>
                    <p class="news-date">17/10/2024</p>
                </div>
            </div>

            <div class="news-item">
                <img src="~/Hinh/Marketing.jpg" alt="Du học Hàn Quốc ngành Marketing">
                <div class="news-details">
                    <h3 class="news-title">Du học Hàn Quốc ngành Marketing: Điều kiện, chi phí 2025</h3>
                    <p class="news-summary">Ngành Marketing là một trong những ngành hot và chủ lực trong thời kỳ chuyển đổi số...</p>
                    <p class="news-date">14/10/2024</p>
                </div>
            </div>

            <div class="news-item">
                <img src="~/Hinh/Thietkethoitrang.jpg" alt="Thiết kế thời trang Hàn Quốc">
                <div class="news-details">
                    <h3 class="news-title">Du học Hàn Quốc ngành thiết kế thời trang | Cập nhật 2025</h3>
                    <p class="news-summary">Hàn Quốc hiện đang là trung tâm phát triển thiết kế thời trang hiện đại...</p>
                    <p class="news-date">12/10/2024</p>
                </div>
            </div>

        </div>

        <div class="sidebar">
            <h2>ĐIỂM ĐẾN DU HỌC</h2>
            <ul>
                <li><a href="#">Du học Canada</a></li>
                <li><a href="#">Du học Mỹ</a></li>
                <li><a href="#">Du học Úc</a></li>
                <li><a href="#">Du học Anh</a></li>
                <li><a href="#">Du học Nhật Bản</a></li>
                <li><a href="#">Du học Hàn Quốc</a></li>
                <li><a href="#">Du học Phần Lan</a></li>
                <li><a href="#">Du học Hà Lan</a></li>
                <li><a href="#">Du học New Zealand</a></li>
                <li><a href="#">Du học Singapore</a></li>
                <li><a href="#">Du học Philippines</a></li>
            </ul>
        </div>
    </div>

</body>
</html>


